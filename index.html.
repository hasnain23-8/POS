<body>
  <header>
    <h1>Simple POS System</h1>
  </header>
  <div class="container">
    <!-- Product List -->
    <div class="products">
      <h2>Products</h2>
      <div class="product">
        <span>Burger</span>
        <span>$5</span>
        <button onclick="addToCart('Burger', 5)">Add</button>
      </div>
      <div class="product">
        <span>Pizza</span>
        <span>$8</span>
        <button onclick="addToCart('Pizza', 8)">Add</button>
      </div>
      <div class="product">
        <span>Fries</span>
        <span>$3</span>
        <button onclick="addToCart('Fries', 3)">Add</button>
      </div>
      <div class="product">
        <span>Drink</span>
        <span>$2</span>
        <button onclick="addToCart('Drink', 2)">Add</button>
      </div>
    </div>

    <!-- Cart -->
    <div class="cart">
      <h2>Cart</h2>
      <table id="cartTable">
        <thead>
          <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      <div id="total">Total: $0</div>
      <div class="checkout">
        <button onclick="checkout()">Checkout</button>
      </div>
    </div>
  </div>

  <script>
    let cart = [];

    function addToCart(item, price) {
      let product = cart.find(p => p.name === item);
      if (product) {
        product.qty++;
        product.total = product.qty * product.price;
      } else {
        cart.push({ name: item, price: price, qty: 1, total: price });
      }
      renderCart();
    }

    function renderCart() {
      let tbody = document.querySelector("#cartTable tbody");
      tbody.innerHTML = "";
      let grandTotal = 0;
      cart.forEach(product => {
        grandTotal += product.total;
        tbody.innerHTML += `
          <tr>
            <td>${product.name}</td>
            <td>$${product.price}</td>
            <td>${product.qty}</td>
            <td>$${product.total}</td>
          </tr>
        `;
      });
      document.getElementById("total").innerText = "Total: $" + grandTotal;
    }

    function checkout() {
      if (cart.length === 0) {
        alert("Cart is empty!");
        return;
      }
      alert("Checkout successful! Total: $" + cart.reduce((sum, p) => sum + p.total, 0));
      cart = [];
      renderCart();
    }
  </script>
